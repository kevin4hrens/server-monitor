# =============================
# Server Monitor - Environment
# Copy this file to .env and fill in your values
# =============================

# General
# Host to ping to check network
CHECK_HOST=8.8.8.8

# Zapier Webhook
# Replace with your Zapier Catch Hook URL
ZAPIER_WEBHOOK=https://hooks.zapier.com/hooks/catch/YOUR_ID/YOUR_TOKEN/

# Thresholds
# Disk usage warning in percent (e.g., 90 = 90%)
DISK_WARN=90

# Minimum free memory percent to trigger alert (e.g., 10 = 10%)
MEM_WARN=10

# Load average threshold (1-minute load)
LOAD_WARN=4
